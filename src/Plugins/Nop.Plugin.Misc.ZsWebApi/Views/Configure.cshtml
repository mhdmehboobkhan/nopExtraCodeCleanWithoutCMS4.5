@model ConfigurationModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";//page title
    ViewBag.Title = T("Plugins.Misc.ZsWebApi.Configure").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("ConfigureZsWebApi");
}

<form asp-controller="ZsWebApi" asp-action="Configure" method="post">

    <nop-antiforgery-token />
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Misc.ZsWebApi.Configure")
        </h1>
        <div class="float-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-header">
                        @T("Plugins.Misc.ZsWebApi.Configure")
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="Enable_OverrideForStore" asp-input="Enable" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="Enable" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Enable" />
                                <span asp-validation-for="Enable"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="NSTKey_OverrideForStore" asp-input="NSTKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="NSTKey" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="NSTKey" />
                                <span asp-validation-for="NSTKey"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="NSTSecret_OverrideForStore" asp-input="NSTSecret" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="NSTSecret" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="NSTSecret" />
                                <span asp-validation-for="NSTSecret"></span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.NSTToken))
                        {
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="NSTToken" />
                                </div>
                                <div class="col-md-9">
                                    <div class="form-text-row">
                                        @Model.NSTToken
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>